  <script>
      // JavaScript to enable horizontal scrolling with both mouse and touch events
  



      var container = document.getElementById('scrollContainer1');
var isPointerDown = false;
var startPointerX;
var startScrollLeft;

// Unified pointer event handling (works for mouse and touch)
container.addEventListener('pointerdown', function (e) {
    e.preventDefault(); // Prevent default behavior (e.g., text selection)
    isPointerDown = true;
    startPointerX = e.pageX; // Store the initial position of the pointer
    startScrollLeft = container.scrollLeft;
    container.setPointerCapture(e.pointerId); // Ensure we capture the pointer
});

container.addEventListener('pointerup', function () {
    isPointerDown = false;
});

container.addEventListener('pointermove', function (e) {
    if (!isPointerDown) return; // Only scroll if the pointer is down
    e.preventDefault(); // Prevent default scrolling behavior
    var x = e.pageX; // Get the horizontal position of the pointer (mouse or touch)
    var walk = (x - startPointerX) * 2; // Adjust the scroll speed as needed
    container.scrollLeft = startScrollLeft - walk;
});

container.addEventListener('pointercancel', function () {
    isPointerDown = false; // Reset when pointer capture is lost
});








      var container = document.getElementById('scrollContainer2');
      var isPointerDown = false;
      var startPointerX;
      var startScrollLeft;
      var isTouchDown = false;
      var startTouchX;

      container.addEventListener('mousedown', function (e) {
          isPointerDown = true;
          startPointerX = e.pageX;
          startScrollLeft = container.scrollLeft;
      });

      container.addEventListener('mouseup', function () {
          isPointerDown = false;
      });

      container.addEventListener('mousemove', function (e) {
          if (!isPointerDown) return;
          e.preventDefault();
          var x = e.pageX;
          var walk = (x - startPointerX) * 2; // Adjust the scrolling speed as needed
          container.scrollLeft = startScrollLeft - walk;
      });

      container.addEventListener('touchstart', function (e) {
          isTouchDown = true;
          startTouchX = e.touches[0].pageX;
          startScrollLeft = container.scrollLeft;
      });

      container.addEventListener('touchend', function () {
          isTouchDown = false;
      });

      container.addEventListener('touchmove', function (e) {
          if (!isTouchDown) return;
          e.preventDefault();
          var x = e.touches[0].pageX;
          var walk = (x - startTouchX) * 2; // Adjust the scrolling speed as needed
          container.scrollLeft = startScrollLeft - walk;
      });





 // Get elements
 const popupButton = document.getElementById("popupButton");
      const popup = document.getElementById("popup");
      const popupClose = document.getElementById("popupClose");

      // Show pop-up when the button is clicked
      popupButton.addEventListener("click", function () {
        popup.style.display = "flex";
      });

      // Close the pop-up when the close button is clicked
      popupClose.addEventListener("click", function () {
        popup.style.display = "none";
      });

      // Optionally, close pop-up when clicking outside the content
      window.addEventListener("click", function (event) {
        if (event.target === popup) {
          popup.style.display = "none";
        }
      });



      const popupButton2 = document.getElementById("popupButton2");
      const popup2 = document.getElementById("popup2");
      const popupClose2 = document.getElementById("popupClose2");

      // Show pop-up when the button is clicked
      popupButton.addEventListener("click", function () {
        popup.style.display = "flex";
      });

      // Close the pop-up when the close button is clicked
      popupClose.addEventListener("click", function () {
        popup.style.display = "none";
      });

      // Optionally, close pop-up when clicking outside the content
      window.addEventListener("click", function (event) {
        if (event.target === popup) {
          popup.style.display = "none";
        }
      });




       // Get the modal
       var modal = document.getElementById("popupModal");

// Get the button that opens the modal
var btn = document.getElementById("popupButton1");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function () {
  modal.style.display = "block";
};

// When the user clicks on <span> (x), close the modal
span.onclick = function () {
  modal.style.display = "none";
};

// When the user clicks anywhere outside of the modal, close it
window.onclick = function (event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
};
      

  </script>



